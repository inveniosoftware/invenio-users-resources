{
  "mappings": {
    "_doc": {
      "dynamic": "strict",
      "dynamic_templates": [
          {
            "profile": {
              "path_match": "profile.*",
              "mapping": {
                "type": "keyword"
              }
            }
          }
      ],
      "properties": {
        "$schema": {
          "type": "keyword",
          "index": "false"
        },
        "id": {
          "type": "keyword"
        },
        "version_id": {
          "type": "integer",
          "index": "false"
        },
        "uuid": {
          "type": "keyword",
          "index": "false"
        },
        "created": {
          "type": "date",
          "index": "false"
        },
        "updated": {
          "type": "date",
          "index": "false"
        },
        "active": {
          "type": "boolean",
          "index": "false"
        },
        "confirmed": {
          "type": "boolean",
          "index": "false"
        },
        "is_current_user": {
          "type": "boolean",
          "index": "false"
        },
        "username": {
          "type": "keyword"
        },
        "email": {
          "type": "keyword"
        },
        "email_hidden": {
          "type": "keyword",
          "index": "false"
        },
        "profile": {
          "properties": {
            "full_name": {
              "type": "text"
            }
          },
          "dynamic": true
        },
        "preferences": {
          "properties": {
            "visibility": {
              "type": "keyword"
            },
            "email_visibility": {
              "type": "keyword"
            }
          }
        }
      }
    }
  }
}
